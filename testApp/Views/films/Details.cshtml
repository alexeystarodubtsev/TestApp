@model testApp.Models.films

@{
    ViewBag.Title = "Details";
}

<div style="margin: 30px">
    <div class="col-md-4">
        <img src=@Url.Content(Model.ImageUrl) style="width:95%" />
    </div>

    <div class="col-md-8">
        <h2>@Html.DisplayFor(model => model.FilmName)</h2>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Описание
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Desctiption)
            </dd>

            <dt>
                Режиссер
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Director)
            </dd>

            <dt>
                Год
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Year)
            </dd>
        </dl>
    </div>
</div>
<div class="col-xs-12" style="margin:10px">
    @if (System.Web.HttpContext.Current.User.Identity.Name == Model.Creator)
    {   
        <a class="btn btn-default" href="~/films/Delete/@Model.Id" role="button">Удалить фильм</a>
        <a class="btn btn-default" href="~/films/Edit/@Model.Id" role="button">Редактировать данные</a>
    }





</div>